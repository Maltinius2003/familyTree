#:kivy 1.0.9

<GenderButton@MDRectangleFlatButton>:
    theme_text_color: 'Custom'
    text_color: (1, 0, 0, 1) if self.state == 'down' else (0, 0, 0, 1)

<Check@MDCheckbox>:
    group: 'group'
    size_hint: None, None
    size: dp(48), dp(48)

