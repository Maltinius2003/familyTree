#:kivy 1.0.9

<MenuScreen>:
    name: 'menu'

    MDLabel:
        text: app.t('Family Tree')
        halign: 'center'
        font_style: 'H2'
        theme_text_color: 'Primary'
        pos_hint: {'center_x':0.5, 'center_y':0.9}

    MDScrollView:
        size_hint: 1, 0.5

        MDList:
            id: container

    MDFloatingActionButton:
        text: 'Show Family Tree'
        icon: 'tree'
        pos_hint: {'center_x':0.5,'center_y':0.7}
        on_press:
            root.manager.current = 'showfamilytree'
            app.print_persons()
            app.save()
    MDFloatingActionButton:
        text: 'Add Family Tree'
        icon: 'plus'
        pos_hint: {'center_x':0.5,'center_y':0.45}
        on_press:
            root.manager.current = 'addfamilytree'
            root.manager.get_screen('addfamilytree').on_access() #to resize the segemented control buttons (gender)
    MDFloatingActionButton:
        text: 'Settings'
        icon: 'cogs'
        pos_hint: {'center_x':0.5,'center_y':0.2}
        on_press:
            root.manager.current = 'settings'
            app.load_persons()